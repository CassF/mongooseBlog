<!DOCTYPE html>
<html>

<head>
    <!--Import materialize.css-->
    <link rel="stylesheet" href="css/materialize.css">
    <!-- Import animate css -->
    <link rel="stylesheet" type="text/css" href="css/animations.css">
    <!-- Import my custom index stylesheet -->
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <title>Home</title>
</head>

<body>
    <!-- Start of header -->
    <header>
        <div class="row">
            <a href="/"><i class="fa fa-home fa-3x" aria-hidden="true"></i></a>
        </div>
    </header>
    <!-- End of header -->
    <!-- Start of banner -->
    <h1 role="title" class="title">Scribbl</h1>
    <!-- End of banner -->
    <!-- NEW BLOG BUTTON -->
    <a href="/new" class="btn animated bounceInUp">
        <i class="fa fa-cloud-upload"></i> New Post
    </a>

    <!-- VIEW ALL BLOGS -->
    <% for(let i = 0; i < blogs.length; i++ ) { %>
        <div>
            <h2>
                <a href="/admin/<%= blogs[i].id %>">
                    <%= blogs[i].title %>
                </a>
            </h2>
            <p class="bcontent">
                <%= blogs[i].body %>
            </p>
        </div>
        <% } %>

            <!--Import jQuery then materialize.js-->
            <script src="js/jquery-3.1.1.min.js"></script>
            <script src="js/materialize.js"></script>
            <!-- Import CSS animation script -->
            <script src="js/css3-animate-it.js"></script>
            <!-- Import Font Awesome script -->
            <script src="https://use.fontawesome.com/add6c7c4be.js"></script>
</body>

</html>